option(WITH_CV3 "Enable OpenCV 3 Trackers" ON)
if(WITH_CV3)
	if(OpenCV_VERSION MATCHES "^2")
		set(THIRD_PARTY_DEFINITIONS ${THIRD_PARTY_DEFINITIONS} DISABLE_CV3)
		message(STATUS "OpenCV 3 not found so its tracking module cannot be enabled")	
	else()
		set(THIRD_PARTY_INCLUDE_DIRS ${THIRD_PARTY_INCLUDE_DIRS} CV3/include)
		set(THIRD_PARTY_TRACKERS ${THIRD_PARTY_TRACKERS} CV3/src/CV3)
	endif()	
else(WITH_CV3)		
	set(THIRD_PARTY_DEFINITIONS ${THIRD_PARTY_DEFINITIONS} DISABLE_CV3)
	message(STATUS "OpenCV 3 tracking module disabled")
endif(WITH_CV3)
